
<div class = "mypanel">

<h2>Album details</h2>
<p>Nom : <%= @wrapper.get_artist("89865").name =%></p>
<p>Titre album : <%= @wrapper.get_release("240536").title =%></p>
<p>Label : <%= @wrapper.get_release("240536").labels[0].name =%></p>
<p>Formats disponibles : <%= @wrapper.get_release("240536").formats[0].descriptions =%></p>
<p>Pays : <%= @wrapper.get_release("240536").country =%></p>
<p>Date sortie : <%= @wrapper.get_release("240536").date_added =%></p>
<p>Style : <%= @wrapper.get_release("240536").styles =%></p>
<div class="col-sm-4">
</div>
<div class="col-sm-4">
  <button class="myaccordion">Tracklist</button>
  <div class="mypanel">
    <br>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Track</th>
          <th scope="col">Duration</th>
        </tr>
      </thead>
      <tbody>
        <% @release.tracklist.each do |track| %>
          <tr>
            <td><%= track.position %></td>
            <td><%= track.title %></td>
            <td><%= track.duration %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>
<div class="col-sm-4">
</div>
</div>