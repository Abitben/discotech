<% if page.current? %>
  <li class="page-item custom-actual-page">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link custom-actual-page' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link custom-pagination-style' %>
  </li>
<% end %>
