<h2>Se connecter</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mt-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
  <div class="field mt-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "Mot de passe", class: "form-control" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me %>
      <%= f.label :Se_souvenir_de_moi %>
    </div>
    <div class="actions field mt-4 mb-4">
      <div class= "row">
        <div class= "col-sm-6">
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: 'btn' %><br />
        </div>
        <div class= "col-sm-3">
          <%= f.submit "Se connecter", class: "btn btn-login" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<% unless controller_name == 'home' %>
  <hr class>
  <div class="row mt-4">
    <div class= "col-sm-6">
      <h4> Pas encore inscrit ?</h4>
    </div>
    <div class= "col-sm-3">
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: 'btn btn-form' %><br />
    </div>
  </div>
<%end%>
