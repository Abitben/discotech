<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Adress:</strong>
    <%= user.adress %>
  </p>

  <p>
    <strong>Zip code:</strong>
    <%= user.zip_code %>
  </p>

  <p>
    <strong>City name:</strong>
    <%= user.city_name %>
  </p>

  <p>
    <strong>Country:</strong>
    <%= user.country %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= user.phone %>
  </p>

</div>
