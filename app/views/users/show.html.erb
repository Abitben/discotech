<h1>Mon profil</h1>
<div class="row">
  <div class="col-sm-3">
    <h2> Mes informations </h2>
    <%= render partial: "users/user", layout: "shared/card_layout", locals: {user: @user} %>
  </div>
  <div class="col-sm-8">
    <h2> Ma collection </h2>
    <%= render partial: "albums/album", layout: "shared/card_layout", collection: @albums, spacer_template: 'shared/divider' %>

