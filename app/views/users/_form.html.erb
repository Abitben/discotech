<%= link_to "Retour à Mon profil", @user, class: 'btn' %>

<h1 class="mt-4">Editer l'utilisateur</h1>

<div class='row'>
  <div class='col-lg-6'>
    <%= form_with(model: user) do |form| %>
      <% if user.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(user.errors.count, "error") %> interdit l'enregistrement de cet utilisateur :</h2>
          <ul>
            <% user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class= 'mt-4'>
        <%= form.label :Prénom, style: "display: block" %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
      <div class= 'mt-4'>
        <%= form.label :nom, style: "display: block" %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
      <div class= 'mt-4'>
        <%= form.label :adresse, style: "display: block" %>
        <%= form.text_field :address, class: 'form-control' %>
      </div>
      <div class= 'mt-4'>
        <%= form.label :code_postal, style: "display: block" %>
        <%= form.text_field :zip_code, class: 'form-control' %>
      </div>
      <div class= 'mt-4'>
        <%= form.label :ville, style: "display: block" %>
        <%= form.text_field :city_name, class: 'form-control' %>
      </div>
      <div class= 'mt-4'>
        <%= form.label :pays, style: "display: block" %>
        <%= form.text_field :country, class: 'form-control' %>
      </div>
      <div class= 'mt-4'>
        <%= form.label :téléphone, style: "display: block" %>
        <%= form.text_field :phone, class: 'form-control' %>
      </div>
      <%= form.submit class: 'btn btn-form' %>
    <% end %>
    </div>
    </div>
    <div class= 'col-lg-3'>
      <h3>Changer d'avatar ?</h3>
      <%= form_tag user_avatars_path(@user), multipart: true do %>
        <%= file_field_tag :avatar %>
        <%= submit_tag "Mettre à jour", class: 'btn btn-form' %>
      <% end %>
    </div>
  </div>
</div>
