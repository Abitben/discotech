
<p style="color: green"><%= notice %></p>
<div class= "row">
  <div class= "col-sm-1">
    <h1>Users</h1>
  </div>
  <div class= "col-sm-2">
    <%= link_to "New user", new_user_path, class: 'btn btn-form' %>
  </div>
</div>
<div id="users">
  <% @users.each do |user| %>
    <%= render partial: 'users/user', layout: 'shared/card_layout', locals: {user: user} %>
    <%= render partial: 'shared/divider'%>
  <% end %>
  <%= paginate @users%>
</div>
